{
  "compilerOptions": {
    "paths": {
      "*": ["./*.d.ts"]
    },
    "target": "ES2015",
    "downlevelIteration": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "moduleResolution": "Node",
    "outDir": "lib"
  }
}
